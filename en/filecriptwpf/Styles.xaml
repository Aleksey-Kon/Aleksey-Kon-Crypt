<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для кнопки -->
    <Style x:Key="Windows11FilePickerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <!-- Белый фон -->
        <Setter Property="Foreground" Value="Black"/>
        <!-- Синий текст -->
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <!-- Серая граница -->
        <Setter Property="BorderThickness" Value="1"/>
        <!-- Толщина границы -->
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <!-- Обычный шрифт -->
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <!-- Выравнивание текста по левому краю -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <Grid>

                            <!-- Текст кнопки -->
                            <ContentPresenter x:Name="contentPresenter" 
                                          HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,12,0" Cursor=""/>
                            <!-- Отступ для иконки -->
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Анимация при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <!-- Светло-серый фон при наведении -->
                            <Setter Property="Foreground" Value="Black"/>
                            <!-- Темно-синий текст -->

                            <!-- Темно-синяя иконка -->
                        </Trigger>
                        <!-- Анимация при нажатии -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#E0E0E0"/>
                            <!-- Серый фон при нажатии -->
                            <Setter Property="Foreground" Value="Black"/>
                            <!-- Еще более темный синий текст -->

                            <!-- Темно-синяя иконка -->
                        </Trigger>
                        <!-- Отключенная кнопка -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <!-- Светло-серый фон -->
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                            <!-- Серый текст -->
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <!-- Серая граница -->

                            <!-- Серая иконка -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Windows11ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <!-- Белый фон -->
        <Setter Property="Foreground" Value="black"/>
        <!-- Синий текст -->
        <Setter Property="BorderBrush" Value="#FF8AAAFF"/>
        <!-- Серая граница -->
        <Setter Property="BorderThickness" Value="1"/>
        <!-- Толщина границы -->
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter x:Name="contentPresenter" 
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                      Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Анимация при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <!-- Светло-серый фон при наведении -->
                            <Setter Property="Foreground" Value="Black"/>
                            <!-- Темно-синий текст -->
                        </Trigger>
                        <!-- Анимация при нажатии -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#E0E0E0"/>
                            <!-- Серый фон при нажатии -->
                            <Setter Property="Foreground">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <!-- Еще более темный синий текст -->
                        </Trigger>
                        <!-- Отключенная кнопка -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <!-- Светло-серый фон -->
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                            <!-- Серый текст -->
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <!-- Серая граница -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Стиль для TextBox -->
    <Style x:Key="Windows11TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="White"/>
        <!-- Белый фон -->
        <Setter Property="Foreground" Value="#000000"/>
        <!-- Черный текст -->
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <!-- Серая граница -->
        <Setter Property="BorderThickness" Value="1"/>
        <!-- Толщина границы -->
        <Setter Property="Padding" Value="1"/>

        <Setter Property="FontWeight" Value="Normal"/>
        <!-- Обычный шрифт -->
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!-- Выравнивание текста по вертикали -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                  VerticalAlignment="Center" 
                                  Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Анимация при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            <!-- Синяя граница -->
                        </Trigger>
                        <!-- Анимация при фокусе -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            <!-- Синяя граница -->

                            <!-- Увеличиваем толщину границы -->
                        </Trigger>
                        <!-- Отключенный TextBox -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <!-- Светло-серый фон -->
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                            <!-- Серый текст -->
                            <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                            <!-- Серая граница -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для PasswordBox -->
    <Style x:Key="Windows11PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="White"/>
        <!-- Белый фон -->
        <Setter Property="Foreground" Value="#000000"/>
        <!-- Черный текст -->
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <!-- Серая граница -->
        <Setter Property="BorderThickness" Value="1"/>
        <!-- Толщина границы -->
        <Setter Property="Padding" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <!-- Обычный шрифт -->
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!-- Выравнивание текста по вертикали -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <Grid>
                            <!-- Поле для ввода пароля -->
                            <ScrollViewer x:Name="PART_ContentHost" 
                                      VerticalAlignment="Center" 
                                      Margin="{TemplateBinding Padding}"/>

                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Анимация при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            <!-- Синяя граница -->
                        </Trigger>
                        <!-- Анимация при фокусе -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            <!-- Синяя граница -->

                        </Trigger>
                        <!-- Отключенный PasswordBox -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <!-- Светло-серый фон -->
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                            <!-- Серый текст -->
                            <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                            <!-- Серая граница -->
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>